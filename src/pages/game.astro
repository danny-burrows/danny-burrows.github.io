---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Banner from '../components/Banner.astro';

let title = 'Game &bull; Danny Burrows';
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/style/global.css">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;400;500;600&display=swap" rel="stylesheet"> 

    <style>
        main {
            display: flex;
            align-items:center;
            flex-direction: column;
            width: 100%;     
        }
        .conte {
            margin-top: 2rem;
            width: 100%;
            max-width: min(100%, 68ch); 
        }
        canvas {
            width: 100%;
            border:1px solid #555;
            /* background-color: var(--background-color-light); */
            background-image: url("https://www.class7.consulting/media/Class_7_Logo.svg");
            background-size: 90%;
            background-repeat: no-repeat;
            background-position: center;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <main>
        <Header />

        <Banner>ðŸš§ This site is still under construction! :-) ðŸš§</Banner>
        
        <div class="conte">
            <canvas id="canvas" />
        </div>

        <Footer />
    </main>


<script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    window.devicePixelRatio=2;      //Clear Text

    const width = canvas.offsetWidth;
    const height = canvas.offsetHeight;

    // canvas.style.width = size;
    // canvas.style.height = size;

    const scale = window.devicePixelRatio; 
        
    canvas.width = Math.floor(width * scale);
    canvas.height = Math.floor(height * scale);

    //CSS pixels for coordinate systems
    ctx.scale(scale, scale);
    ctx.font = `${width / 8}px Arial`;
    ctx.textAlign = 'center';
    ctx.textBaseline = 'middle';

    ctx.fillStyle = "red";
    ctx.strokeStyle = getComputedStyle(document.documentElement).getPropertyValue('--accent-color');

    const x = width / 2;
    const y = height / 2;

    setInterval(() => {
        ctx.beginPath();
        ctx.arc(Math.floor(Math.random() * 1000), Math.floor(Math.random() * 1000), Math.floor(Math.random() * 1000), 0, 2 * Math.PI);
        
        ctx.stroke();

        const textString = "Test Page";
        ctx.fillText(textString, x, y);
        ctx.strokeText(textString, x, y);
    }, 0)
</script>
</body>
</html>



